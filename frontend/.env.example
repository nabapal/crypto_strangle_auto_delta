# Frontend environment configuration
# Copy this file to .env and adjust values per deployment target.

# Base URL for the backend API (include the /api prefix).
# Example for local development: http://localhost:8001/api
# Example for production: https://your-domain.tld/api
VITE_API_BASE_URL=http://localhost:8001/api

# Enable verbose request/response logging in the browser console
VITE_ENABLE_API_DEBUG=false

# Delta Exchange WebSocket endpoint used for live spot prices
# Default production endpoint: wss://socket.delta.exchange
VITE_DELTA_WEBSOCKET_URL=wss://socket.delta.exchange
