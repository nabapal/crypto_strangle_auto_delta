# Production environment template for Delta Strangle Control Plane
# Copy to `.env.prod` and fill in values before running docker-compose.prod.yml.

########################################
# Backend (FastAPI)
########################################
APP_NAME="Delta Strangle Control Plane"
DATABASE_URL=sqlite+aiosqlite:////app/data/delta_trader.db
# Provide a JSON array of allowed origins for CORS, even if only one domain is used.
ALLOWED_ORIGINS=["https://your-domain.example"]
LOG_LEVEL=INFO
BACKEND_LOG_INGEST_ENABLED=true
BACKEND_LOG_PATH=/app/logs/backend.log
BACKEND_LOG_POLL_INTERVAL=1.0
BACKEND_LOG_BATCH_SIZE=128
BACKEND_LOG_RETENTION_DAYS=7
LOG_INGEST_API_KEY=
DELTA_API_KEY=
DELTA_API_SECRET=
DELTA_BASE_URL=https://api.india.delta.exchange
DELTA_TESTNET_URL=https://testnet-api.delta.exchange
DELTA_LIVE_TRADING=true
# Use lowercase true/false; any other value will fail validation on startup.
DEBUG_HTTP_LOGGING=false
DELTA_DEBUG_VERBOSE=false

########################################
# Frontend build settings (passed as build args)
########################################
VITE_API_BASE_URL=https://your-domain.example/api
VITE_ENABLE_API_DEBUG=false
